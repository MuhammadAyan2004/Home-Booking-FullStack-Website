<header class="bg-gray-900 text-white shadow-md">
  <div class="max-w-7xl mx-auto px-6 py-3 flex items-center justify-between">
    
    <!-- Left Side: Brand + Nav Links -->
    <div class="flex items-center space-x-8">
      <!-- Brand -->
      <a href="/" class="text-2xl font-bold tracking-wide text-red-600">
        airbnb
      </a>

      <!-- Nav Links -->
      <ul class="flex space-x-6 text-sm font-medium">
            <li>
              <a href="/homeList" class="<%= activePage === 'homeList' ? 'text-yellow-400 border-b-2 border-yellow-400' : 'hover:text-red-500' %> transition pb-1">Home List</a>
            </li>
            <li>
              <a href="/favorites" class="<%= activePage === 'favorite' ? 'text-yellow-400 border-b-2 border-yellow-400' : 'hover:text-red-500' %> transition pb-1">Favorite Home</a>
            </li>
            <li>
              <a href="/bookings" class="<%= activePage === 'booking' ? 'text-yellow-400 border-b-2 border-yellow-400' : 'hover:text-red-500' %> transition pb-1">Bookings</a>
            </li>
            <li>
              <a href="/host/AddHome" class="<%= activePage === 'AddHome' ? 'text-yellow-400 border-b-2 border-yellow-400' : 'hover:text-red-500' %> transition pb-1">Add Home</a>
            </li>
            <li>
              <a href="/host/homes" class="<%= activePage === 'homeAdded' ? 'text-yellow-400 border-b-2 border-yellow-400' : 'hover:text-red-500' %> transition pb-1">Host Homes</a>
            </li>
      </ul>
    </div>

    <!-- Right Side: Auth Buttons -->
    <div class="flex items-center space-x-4">
        <a href="/signUp" class="px-4 py-1 rounded-lg bg-red-600 text-gray-900 hover:bg-red-500 transition">Sign Up</a>
        <a href="/login" class="px-4 py-1 rounded-lg border border-red-500 text-red-500 hover:bg-red-500 hover:text-gray-900 transition">Login</a>
        <form action="/logout" method="post">
          <button type="submit" class="px-4 py-1 rounded-lg border border-red-500 text-red-400 hover:bg-red-500 hover:text-white transition">
            Logout
          </button>
        </form>
    </div>

  </div>
</header>
