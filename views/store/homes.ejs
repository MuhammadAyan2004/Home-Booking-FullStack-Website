<%- include('../partials/head.ejs') %>
</head>
<body>
<%- include('../partials/nav.ejs') %>

  <main class="min-h-screen bg-gray-100 p-8">
    <h1 class="text-3xl font-bold text-center text-gray-800 mb-6">All Available Homes</h1>
    
    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      <% home.forEach(house=>{ %>
      <div class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-xl transition">
        <img src="<%= house.pic %>" alt="Home image" class="w-full h-48 object-cover">

        <div class="p-4 space-y-2">
          <h2 class="text-lg font-bold text-gray-800"><%= house.houseName %></h2>
          <p class="text-gray-600">📍 <%= house.location %></p>
          <p class="text-yellow-500">⭐<%= house.rating %></p>
          <p class="text-blue-600 font-semibold">💰 $<%= house.price %></p>
          <div class="flex gap-2">
            <a class="bg-blue-500 py-3 px-4 text-white rounded-xl w-[15vh] h-[8vh]" href="/homeList/<%=house._id%>">Details</a>
            <form action="/favorite" method="POST">
              <button type="submit" class="bg-green-500 text-white font-semibold py-3 px-4 rounded-xl hover:bg-green-600 transition"> Add to Favorite </button>
              <input type="hidden" name="id" value="<%= house._id %>">
            </form>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
  </main>
    
</body>
</html>